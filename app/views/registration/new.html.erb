<h1>sign up</h1>

<%= form_with model: @user, url: sign_up_path, html: { novalidate: true } do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "sign_up" %>
  </div>
<% end %>
